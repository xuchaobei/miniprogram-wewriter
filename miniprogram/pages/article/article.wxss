/* pages/article/article.wxss */
.title {
  height: 90rpx;
}

.instruction {
  display: inline-block;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: yellowgreen;
  text-decoration: underline;
}

input, textarea {
  color: black;
  height: 68rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  line-height: 68rpx;
  /* font-size: 30rpx; */
  border: 1px solid rgba(0, 0, 0, 0.1);
}

label, text {
  color: black;
  line-height: 1;
  /* font-size: 30rpx; */
}

textarea {
  height: 135rpx;
  width: 100%;
}

.region-picker {
  position: relative;
  height: 68rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  line-height: 68rpx;
  /* font-size: 30rpx; */
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.region-picker::after {
  position: absolute;
  top: 25rpx;
  right: 20rpx;
  content: '';
  border-right: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
  border-top: 15rpx solid rgb(35, 35, 35);
}

.courses-picker label {
  display: block;
  height: 76rpx;
  line-height: 76rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  border-left: 1px solid rgba(0, 0, 0, 0.1);
  border-right: 1px solid rgba(0, 0, 0, 0.1);
}

.courses-picker label:last-child {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.courses-picker checkbox {
  margin-left: 10rpx;
  transform: scale(0.8,0.8);
} 

radio-group {
  line-height: 68rpx;
}

radio {
  margin-left: 20rpx;
}

radio .wx-radio-input{
  border-radius:50%;
  width:32rpx;
  height:32rpx;
}

.btn-region {
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.btn-area {
  padding-top: 30rpx;
}

button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  background-color: rgb(35, 100, 200);
  font-size: 32rpx;
  font-weight: bold;
}