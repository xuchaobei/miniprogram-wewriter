.page {
  text-align: center;
  width: 100%;
  height: 100%; 
  position: absolute;
}

.section {
  position: absolute;
  top:0;
  left: 0;
  right: 0;
  bottom: 300rpx;
  border-bottom: 1px solid grey; 
}

.section__bg {
  width: 100%;
  height: 100%;
  opacity:0.8;
}

.page__date {
  position: absolute;
  width: 100%;
  text-align: center;
  top: 20px;
  font-weight: bold;
  color: black;
}

.page__title {
  position: absolute;
  width: 500rpx;
  margin-left: 125rpx;
  margin-right: 125rpx;
  text-align: center;
  bottom: 300px;
  font-weight: bold;
  color: black;
}

.page__content {
  position: absolute;
  height: 300rpx;
  left: 50rpx;
  bottom: 0;
  right: 400rpx;
  text-align: left;
}

.page__portrait {
  position: relative;
  width: 400rpx;
  height: 100rpx;
  top: -50rpx;
}

.page__portrait image{
  border: 2rpx solid white;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}

.page__nickname {
  position: relative;
  width: 100%;
  height: 30rpx;
  top: -50rpx;
  font-size: 14px;
}

.page__desc {
  font-size: 14px;
  margin-bottom: 10rpx;
  color: grey;
}

.page__detail {
  font-size: 12px;
  color: grey;
}

.page__qrcode {
  position: absolute;
  height: 300rpx;
  left: 350rpx;
  bottom: 0;
  right: 0;
}

.page__qrcode image{
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  left: 150rpx;
  bottom: 60rpx;
}

.page__tip {
  position: absolute;
  text-align: center;
  font-size: 12px;
  left: 150rpx;
  bottom: 10rpx;
}
